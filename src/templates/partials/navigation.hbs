<ul class="nav nav-pills nav-stacked">
    {{#each collections}}
        <li>
            <a href="#{{anchor metadata.name}}">{{inc @index}}. {{metadata.name}}</a>
            {{#ifArticlesWithHeading this}}
                <ul class="nav">
                    {{resetCounter}}
                    {{#each this}}
                        {{#ifNotFalse heading}}
                            <li><a href="#{{anchor title}}">{{inc @../index}}.{{incrementCounter}} {{{title}}}</a></li>
                        {{/ifNotFalse}}
                    {{/each}}
                </ul>
            {{/ifArticlesWithHeading}}
        </li>
    {{/each}}
</ul>
